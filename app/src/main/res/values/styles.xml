<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#BE52F2</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">#DBA5F5</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
      //
    </style>

    <style name="TitleText" parent="BoldText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
       <item name="android:layout_marginTop">20sp</item>
        <item name="android:layout_marginStart">8sp</item>
        <item name="android:fontFamily">SF Pro Text</item>

    </style>

    <style name="BoldText">
        <item name="android:fontFamily">SF Pro Text</item>
    </style>

    <style name="RegularText">
        <item name="android:fontFamily"></item>
    </style>

    <style name="SimpleText">
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:layout_marginStart">60sp</item>

    </style>

    <style name="SeekBar" parent="Widget.AppCompat.SeekBar" >
        <item name="colorAccent">#DBA5F5</item>
    </style>

</resources>
